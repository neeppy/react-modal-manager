{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["ES2022", "ES2017", "ES7", "ES6", "DOM"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist"
  },
  "exclude": [
    "./test/*",
    "./dist/**/*",
    "node_modules"
  ]
}
